# Production Environment Variables for Frontend
# Copy this to .env.local for local development or configure in Vercel dashboard

# Domain Configuration
NEXT_PUBLIC_DOMAIN=plugd.page.gd
NEXT_PUBLIC_API_URL=https://api.plugd.page.gd
NEXT_PUBLIC_FRONTEND_URL=https://plugd.page.gd

# NextAuth Configuration
NEXTAUTH_URL=https://plugd.page.gd
NEXTAUTH_SECRET=your-production-nextauth-secret-here

# API Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_your-razorpay-key-id

# Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true

# Environment
NODE_ENV=production