# Production Environment Variables for Backend
# Configure these in Railway dashboard or your hosting platform

# Server Configuration
NODE_ENV=production
PORT=5000
DOMAIN=api.plugd.page.gd
FRONTEND_URL=https://plugd.page.gd

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/plugd-production?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-for-production
JWT_REFRESH_EXPIRE=30d

# Payment Gateway Configuration
# Stripe
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Razorpay
RAZORPAY_KEY_ID=rzp_live_your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret-key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=live

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@plugd.page.gd
SMTP_PASS=your-email-app-password
EMAIL_FROM=noreply@plugd.page.gd

# Redis Configuration (if using caching)
REDIS_URL=redis://username:password@host:port

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=plugd-production-assets

# Security Configuration
CORS_ORIGIN=https://plugd.page.gd
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
ENABLE_MORGAN_LOGGING=true

# Admin Configuration
ADMIN_EMAIL=admin@plugd.page.gd
SUPER_ADMIN_EMAIL=superadmin@plugd.page.gd