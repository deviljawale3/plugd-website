# Development Environment Variables for Backend
# Copy to .env for local development

# Server Configuration
NODE_ENV=development
PORT=5000
DOMAIN=localhost
FRONTEND_URL=http://localhost:3000

# Database Configuration (Local MongoDB or Atlas)
MONGODB_URI=mongodb://localhost:27017/plugd-development
# Or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/plugd-development

# JWT Configuration
JWT_SECRET=development-jwt-secret-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=development-refresh-secret-change-in-production
JWT_REFRESH_EXPIRE=30d

# Payment Gateway Configuration (Test Keys)
# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-test-webhook-secret

# Razorpay
RAZORPAY_KEY_ID=rzp_test_your-razorpay-test-key-id
RAZORPAY_KEY_SECRET=your-razorpay-test-secret-key

# Email Configuration (Development)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@localhost

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Monitoring
LOG_LEVEL=debug
ENABLE_MORGAN_LOGGING=true